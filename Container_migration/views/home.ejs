  <body style="background-color: #cceaf0">
    <h1 style="    margin-left: 500px;
    font-family: sans-serif;">Container Migration</h1>
    <br />
 
    <div style="float: left">
    <h3>Start the container: </h3><a id="start" class="btn btn-success" href="start" class="btn btn-primary" role="button">Start</a>
</div>
  <div style="    margin-left: 390px;">
        <h3>Migrate container </h3><a id="migrate" href="migrate" class="btn btn-primary" role="button">Migrate</a>

  </div>
 
    <br />
    <br />
    <br />
 
    <h3>Status</h3>
    <div class="progress">
      <div id="dynamic" class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
        <span id="current-progress"></span>
      </div>
    </div>

 
    


      <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    
      
    
        <script>
     
  var current_progress = 0;


  $('#start').click(function() {
    var refreshIntervalId = setInterval(function() {
      if(current_progress<100){
        current_progress += 10;
      $("#dynamic")
      .css("width", current_progress + "%")
      .attr("aria-valuenow", current_progress)
      .text(current_progress + "% Complete");
      }
     else{
        clearInterval(refreshIntervalId);
     }
  
         
  }, 1000);

      if (current_progress >= 100){
        //   break;
        clearInterval(refreshIntervalId);
      }
  })

var current_progress = 0;
 $('#migrate').click(function() {
    var refreshIntervalId = setInterval(function() {
      if(current_progress<100){
        current_progress += 20;
      $("#dynamic")
      .css("width", current_progress + "%")
      .attr("aria-valuenow", current_progress)
      .text(current_progress + "% Complete");
      }
     else{
        clearInterval(refreshIntervalId);
     }
  
         
  }, 1000);

      if (current_progress >= 100){
        //   break;
        clearInterval(refreshIntervalId);
      }
  })







        </script>
    
    

